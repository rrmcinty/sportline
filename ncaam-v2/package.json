{
  "name": "ncaam-v2",
  "version": "2.0.0",
  "description": "Data-driven NCAAM betting tool - moneylines only",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "ncaam": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp schema.sql dist/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "all": "npm run build && npm link",
    "fetch": "node dist/index.js fetch --season 2023,2024,2025",
    "train": "node dist/index.js train --season 2023,2024,2025",
    "backtest": "node dist/index.js backtest --season 2023,2024,2025",
    "recommend": "node dist/index.js recommend --min-confidence 80",
    "update": "npm run fetch && npm run train && npm run backtest"
  },
  "keywords": [
    "ncaam",
    "betting",
    "moneyline",
    "roi",
    "data-driven"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  }
}
