{
  "name": "sportline",
  "version": "0.1.0",
  "description": "NCAAM betting CLI with parlay EV ranking",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "sportline": "dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp src/db/schema.sql dist/db/",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "echo \"No tests yet\" && exit 0",
    "all": "npm run build && npm link",
    "ingest": "node dist/index.js data daily",
    "ingest:cfb": "node dist/index.js data daily --sports cfb",
    "ingest:ncaam": "node dist/index.js data daily --sports ncaam"
  },
  "keywords": [
    "ncaam",
    "betting",
    "parlay",
    "ev",
    "cli"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^11.7.0",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  }
}
